platform :ios, '12.0'

source 'https://cdn.cocoapods.org/'

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Firebase Pods (using specific versions to ensure compatibility)
  pod 'Firebase/Core', '10.26.0'
  pod 'Firebase/Auth', '10.26.0'
  pod 'Firebase/Firestore', '10.26.0'
  pod 'Firebase/Analytics', '10.26.0'
end

# Post-install configuration
post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['SWIFT_VERSION'] = '5.0'
      config.build_settings['GENERATE_INFOPLIST_FILE'] = 'NO'
      # Fix for Firebase/Firestore
      config.build_settings['OTHER_LDFLAGS'] = '$(inherited) -framework FirebaseFirestore'
    end
  end
end