  platform :ios, '12.0'

  target 'Runner' do
    use_frameworks!
    use_modular_headers!

    # Firebase Pods
    pod 'Firebase/Core'
    pod 'Firebase/Auth'
    pod 'Firebase/Firestore'
    pod 'Firebase/Analytics'

    # Flutter
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  end